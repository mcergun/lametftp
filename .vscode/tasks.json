{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "shell: g++ build active file",
			"command": "make",
			"args": [
				"all"
			],
			"options": {
				"cwd": "${workspaceRoot}"
			},
			"problemMatcher": {
				"owner": "cpp",
                "fileLocation": ["relative", "${workspaceRoot}"],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
			},
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}